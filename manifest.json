{
  "manifest_version": 3,
  "name": "Snow on Tabs",
  "version": "1.0",
  "description": "Beautiful snowflakes appear when you're inactive for a while.",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["snow.css"]
    }
  ],
  "icons": {
    "128": "icons/snow.png"
  }
}
